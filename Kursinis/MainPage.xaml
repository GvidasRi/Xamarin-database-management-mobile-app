<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursinis.MainPage">

    <StackLayout>
        <Frame BackgroundColor="DeepPink" Padding="24" CornerRadius="0">
            <Label Text="Prisijungimas" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>

        </Frame>
        <Entry x:Name="Username" Placeholder="Username" />
        <Entry x:Name="Password" IsPassword="true" Placeholder="Password" />
        <Button Text="Prisijungti" Clicked="Handle_Clicked" />
        <Button Text="Registracija" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
